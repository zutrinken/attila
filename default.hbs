<!DOCTYPE html>
<html lang="{{@site.lang}}">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<title>{{meta_title}}</title>

	<meta name="HandheldFriendly" content="True" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<link rel="stylesheet" type="text/css" href="{{asset "css/style.css"}}" />

	{{ghost_head}}
</head>

<body class="{{body_class}}">

	<header class="header">
		<div class="logo">
			{{#if @site.logo}}
			<span class="logo">
				<a href="/" title="{{t "Home"}}"><img src="{{@site.logo}}" alt="{{t "Logo"}}" /></a>
			</span>
			{{/if}}
			<div class="pipe"></div>
			<p class="small">Funding. hacked.</p>
		</div>

		<nav>
			<div class="links">
				{{navigation}}
			</div>

			{{#if @site.twitter}}
				<a class="twitter" title="Twitter" href="{{twitter_url}}" title="{{@site.twitter}}" target="_blank">
					<i class="ri-twitter-fill"></i>
				</a>
			{{/if}}

			<i class="hamburger ri-menu-line"></i>
		</nav>
	</header>

	<section class="page-wrapper">

		{{{body}}}

		<footer class="footer">
			<p>{{@site.title}} &copy; {{date format='YYYY'}}</p>
		</footer>

	</section>

	{{!-- Load basic scripts --}}
	<script type="text/javascript" src="{{asset "js/script.js"}}"></script>

	{{!-- Load scripts from other template files --}}
	{{{block "scripts"}}}

	{{ghost_foot}}

</body>
</html>
