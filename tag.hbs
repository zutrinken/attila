{{!< default}}

<header id="blog-header"{{#if @blog.cover}} class="has-cover"{{/if}}>
	<div class="inner">
		<nav id="navigation">
			{{#if @blog.logo}}
			<span class="blog-logo">
				<a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>
			</span>
			{{else}}
			<span id="home-button" class="nav-button">
				<a class="home-button" href="{{@blog.url}}" title="Home"><i class="ic ic-arrow-left"></i> Home</a>
			</span>
			{{/if}}
			{{#if @blog.navigation}}
			<span id="menu-button" class="nav-button">
				<a class="menu-button"><i class="ic ic-menu"></i> Menu</a>
			</span>
			{{/if}}
		</nav>
		<h1 class="blog-name">{{tag.name}}</h1>
		<span class="blog-description">
		{{#if tag.description}}
			{{tag.description}}
		{{else}}
			Posts: {{pagination.total}}
		{{/if}}
		</span>
		{{#if @blog.cover}}
		<div class="blog-cover cover" style="background-image: url('{{@blog.cover}}');"></div>
		{{/if}}
	</div>
</header>

<div id="index" class="container">

	<main class="content" role="main">
	
		{{> "loop"}}
	
	</main>

</div>